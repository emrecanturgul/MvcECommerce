@model MvcECommerce.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<style>
    .tesla-checkout-card {
        background: #fff;
        border-radius: 30px;
        box-shadow: 0 8px 44px rgba(80,40,180,0.10);
        padding: 42px 38px 32px 38px;
        max-width: 480px;
        margin: 56px auto 0 auto;
    }

    .tesla-checkout-title {
        font-size: 2.15rem;
        font-weight: 900;
        color: #7e22ce;
        margin-bottom: 18px;
        text-align: center;
        letter-spacing: .01em;
    }

    .tesla-form-label {
        font-weight: 600;
        color: #37374a;
        font-size: 1.06rem;
        margin-bottom: 8px;
    }

    .tesla-form-group {
        margin-bottom: 22px;
    }

    .tesla-form-control {
        border-radius: 13px;
        border: 1.5px solid #ececec;
        box-shadow: 0 2px 12px #7e22ce10;
        padding: 13px 16px;
        font-size: 1.09rem;
        transition: border .14s;
    }

        .tesla-form-control:focus {
            border: 1.5px solid #7e22ce;
            box-shadow: 0 3px 18px #7e22ce21;
            outline: none;
        }

    .tesla-btn {
        background: linear-gradient(90deg,#14b8a6,#7e22ce 100%);
        color: #fff;
        font-weight: 700;
        border: none;
        border-radius: 13px;
        padding: 13px 0;
        font-size: 1.15rem;
        width: 100%;
        margin-top: 8px;
        box-shadow: 0 2px 16px #7e22ce10;
        transition: background .12s, box-shadow .13s;
    }

        .tesla-btn:hover {
            background: linear-gradient(90deg,#7e22ce 15%,#14b8a6 85%);
            color: #fff;
            box-shadow: 0 5px 24px #7e22ce22;
        }
</style>

<div class="container">
    <div class="tesla-checkout-card">
        <div class="tesla-checkout-title">
            <i class="fa-solid fa-clipboard-list"></i> Cart Details
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="tesla-form-group">
                <label class="tesla-form-label">Name & Surname</label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "tesla-form-control", placeholder = "Your Full Name" })
                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">Address Name</label>
                @Html.TextBoxFor(x => x.AddressName, new { @class = "tesla-form-control", placeholder = "Address Title (e.g. Home, Office)" })
                @Html.ValidationMessageFor(x => x.AddressName, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">Address</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "tesla-form-control", placeholder = "Full Address" })
                @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">City</label>
                @Html.TextBoxFor(x => x.City, new { @class = "tesla-form-control", placeholder = "City" })
                @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">District</label>
                @Html.TextBoxFor(x => x.District, new { @class = "tesla-form-control", placeholder = "District" })
                @Html.ValidationMessageFor(x => x.District, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">Neighborhood</label>
                @Html.TextBoxFor(x => x.Neighborhood, new { @class = "tesla-form-control", placeholder = "Neighborhood" })
                @Html.ValidationMessageFor(x => x.Neighborhood, "", new { @class = "text-danger" })
            </div>
            <div class="tesla-form-group">
                <label class="tesla-form-label">Zip Code</label>
                @Html.TextBoxFor(x => x.ZipCode, new { @class = "tesla-form-control", placeholder = "Zip/Postal Code" })
                @Html.ValidationMessageFor(x => x.ZipCode, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="tesla-btn" style="display:inline-block;">
                <i class="fa fa-paper-plane"></i> Complete Order
            </button>

        }
    </div>
</div>
