@{
    ViewBag.Title = "Order Completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex align-items-center justify-content-center" style="min-height: 75vh;">
    <div class="text-center" style="background: #fff; border-radius: 32px; box-shadow: 0 10px 38px rgba(60,60,120,0.14); padding: 56px 36px 48px 36px; max-width: 440px; width: 100%;">
        <i class="fa-solid fa-bag-shopping mb-3" style="color:#36d399; font-size:3.4rem;"></i>
        <h2 style="font-size:2.3rem; font-weight:900; margin-top:14px;">Order Completed</h2>
        <p style="font-size:1.14rem; color:#555; margin-top:18px;">
            Thank you for your purchase!<br>
            Your order has been placed successfully.<br>
            You’ll receive a confirmation email soon.
        </p>
        <a href="~/"
           class="btn btn-success mt-4 px-4 py-2" style="border-radius: 14px; font-weight: 700;">
            <i class="fa-solid fa-arrow-left mr-2"></i>
            Back to Home
        </a>
    </div>
</div>
