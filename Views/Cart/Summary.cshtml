@model MvcECommerce.Models.Cart

<li class="nav-item" style="position:relative;">
    <a href="@Url.Action("Index", "Cart")" class="nav-link px-2" style="position:relative;">
        <i class="fa-solid fa-cart-shopping" style="font-size:1.45rem; color:#7e22ce;"></i>
        @if (Model.TotalQuantity() > 0)
        {
            <span style="
                position: absolute; top: 3px; right: -7px;
                min-width: 22px; height: 22px;
                background: #e11d48; color: #fff;
                border-radius: 50%; font-size: .93rem; font-weight: 700;
                display: flex; align-items: center; justify-content: center;
                box-shadow: 0 2px 8px rgba(200,30,60,0.11); border:2.5px solid #fff;">
                @Model.TotalQuantity()
            </span>
        }
    </a>
</li>
