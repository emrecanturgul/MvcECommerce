@using MvcECommerce.Entities
@using MvcECommerce.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "Tesla Garage - All Models";
}
<div class="container" style="margin-top:48px; max-width:1350px;">
    <div class="row gx-5 gy-4">
        <!-- Sidebar: Kategoriler -->
        
            @Html.Action("GetCategories", "Home")
        
        <!-- Product Cards -->
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="no-products-container">
                    <div class="no-products-icon">
                        <svg width="68" height="68" fill="none" viewBox="0 0 68 68">
                            <circle cx="34" cy="34" r="32" fill="url(#paint0_radial_1_1)" />
                            <path d="M23 35L31 43L45 29" stroke="#fff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" />
                            <defs>
                                <radialGradient id="paint0_radial_1_1" cx="0" cy="0" r="1" gradientTransform="translate(34 34) scale(34)">
                                    <stop stop-color="#16B8F3" />
                                    <stop offset="1" stop-color="#8F3FFC" />
                                </radialGradient>
                            </defs>
                        </svg>
                    </div>
                    <h3 style="margin-top:24px; font-weight:600; font-size:1.35rem; color:#222;">
                        Product is not found
                    </h3>
                    <p style="color:#697089; font-size:1rem; margin-top:8px;">
                        There are currently no products in this category. <br /> Please control other categories
                    </p>
                </div>
            }
            else
            {
                <div style="background: linear-gradient(90deg,#d8e7ff,#b6d4f7);border-radius:12px;padding:10px 16px;font-size:1.12rem;font-weight:600;box-shadow:0 2px 8px rgba(120,120,190,0.06);margin-bottom:24px;display:inline-block;">
                    <i class="fa fa-box-open" style="margin-right:6px;opacity:0.85;"></i>
                    <span>@Model.Count() products found</span>
                </div>

            }



            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
