@model MvcECommerce.Entities.Category
@{
    ViewBag.Title = "Category Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card p-5 shadow" style="border-radius:22px; background:#fff;">
                <h3 class="mb-4" style="font-weight:700; background: linear-gradient(90deg,#1686b7,#8f3ffc);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
                    Category Details
                </h3>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning mr-2" style="border-radius:12px;">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary" style="border-radius:12px;">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
