@model MvcECommerce.Entities.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg p-4" style="border-radius:22px; background:#fff;">
                <div class="d-flex align-items-center mb-4">
                    <div class="me-3" style="font-size:2.2rem; color:#ff5353;">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                    <h2 style="font-weight:700;background:linear-gradient(90deg,#ff5353,#f89c28);-webkit-background-clip:text;-webkit-text-fill-color:transparent;margin-bottom:0;">
                        Delete Product
                    </h2>
                </div>
                <hr />
                <p class="fs-5 mb-4 text-danger"><b>Are you sure you want to delete this product?</b></p>

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">Category</dt>
                    <dd class="col-sm-8">@Model.Category.Name</dd>

                    <dt class="col-sm-4 text-muted">Name</dt>
                    <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                    <dt class="col-sm-4 text-muted">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 text-muted">Price</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString()</dd>

                    <dt class="col-sm-4 text-muted">Stock</dt>
                    <dd class="col-sm-8">@Model.Stock</dd>

                    <dt class="col-sm-4 text-muted">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsApproved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Passive</span>
                        }
                    </dd>

                    <dt class="col-sm-4 text-muted">Home</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsHome)
                        {
                            <span class="badge bg-primary">Home</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark border">-</span>
                        }
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="d-flex gap-2">
                        <input type="submit" value="Delete" class="btn btn-danger px-4 fw-bold shadow" style="border-radius:14px;" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary px-4 fw-bold", style = "border-radius:14px;" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
